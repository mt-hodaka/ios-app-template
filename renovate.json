{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "ignorePresets": [
    ":prHourlyLimit2"
  ],
  "packageRules": [
    {
      "matchManagers": ["bundler"],
      "groupName": "Gems",
      "semanticCommitScope": "gems",
      "rangeStrategy": "update-lockfile"
    },
    {
      "matchPaths": [
        "BuildTools/**"
      ],
      "groupName": "Build Tools",
      "semanticCommitScope": "tools"
    }
  ]
}
